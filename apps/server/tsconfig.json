{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@prisma/client": ["node_modules/database"]
    }
  },
  "include": ["./**/*.ts"]
}
